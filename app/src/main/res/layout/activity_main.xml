<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <Button
        android:id="@+id/den"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="denny plan"
        android:padding="15dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="@+id/mainLayout" />

    <Button
        android:id="@+id/tyzden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tyzdenny plan"
        android:padding="15dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/den"/>

    <Button
        android:id="@+id/mesiac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mesacny plan"
        android:padding="15dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tyzden"/>

    <Button
        android:id="@+id/ciel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="ciel"
        android:padding="15dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>