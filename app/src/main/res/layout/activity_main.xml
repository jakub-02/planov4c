<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <include
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/pilire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@+id/myToolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/praca"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/praca_light"
                app:cardElevation="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/work"
                        android:layout_margin="15dp"
                        >
                    </ImageView>

                    <TextView
                        android:textAlignment="center"
                        android:text="Práca"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="40sp"
                        android:textColor="#FFF"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true"
                        />
                </FrameLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/rodina"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/rodina_light"
                app:cardElevation="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/family"
                        android:layout_margin="15dp">
                    </ImageView>

                    <TextView
                        android:textAlignment="center"
                        android:text="Rodina"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="40sp"
                        android:textColor="#FFF"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/skola"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/skola_light"
                app:cardElevation="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/school"
                        android:layout_margin="15dp">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Škola"
                        android:textAlignment="center"
                        android:textSize="40sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#FFF"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/zabava"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/zabava_light"
                app:cardElevation="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/laugh"
                        android:layout_margin="15dp">
                    </ImageView>

                    <TextView
                        android:textAlignment="center"
                        android:text="Zábava"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="40sp"
                        android:textColor="#FFF"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pilire"
        android:layout_marginHorizontal="10dp">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>