<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedDayActitvity">

    <LinearLayout
        android:id="@+id/selectedDayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="@id/dialyPlanLayout">

            <TextView
                android:id="@+id/den"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="den"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/datum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="dnesny_datum"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/pridajPlan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#38b000"
            android:layout_margin="5dp"
            android:text="Pridaj plan"
            android:textStyle="bold"/>



    </LinearLayout>


</ScrollView>